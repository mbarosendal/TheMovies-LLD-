<Window x:Class="TheMovies_LLD_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMovies_LLD_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center">
            <TextBox Text="{Binding MovieToAdd.Title}" Width="300" Height="35"/>
            <TextBox Text="{Binding MovieToAdd.Duration}" Width="300" Height="35"/>
            <TextBox Text="{Binding MovieToAdd.Genre}" Width="300" Height="35"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button Content="Add" Command="{Binding AddCommand, UpdateSourceTrigger=PropertyChanged}" Width="70" Height="30"/>
        </StackPanel>

        <ListView Grid.Column="1" ItemsSource="{Binding Movies, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Summary"/>

    </Grid>
</Window>
