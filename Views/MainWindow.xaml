<Window x:Class="TheMovies_LLD_.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMovies_LLD_"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="MainWindow" >
    
    <Grid Height="450" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="btn_FrontPage" Content="Front Page" VerticalAlignment="Center" HorizontalAlignment="Left"  Width="70" Height="30" Click="btn_FrontPage_Click"/>
            <Button x:Name="btn_MoviesPage" Content="Movies" VerticalAlignment="Center" HorizontalAlignment="Left"  Width="70" Height="30" Click="btn_Movies_Click"/>
        </StackPanel>
        
        <Frame x:Name="Main" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="0,10,0,0"/>

    </Grid>
</Window>
